<div id="content">
    <section id="stats">
        <div class="stat stat-1">
            <i class="stat-icon fas fa-desktop fa-lg"></i>
            <div class="stat-text-value">
                <div class="stat-text">
                    Total Visits
                </div>
                <div class="stat-value">(500)</div>
            </div>
        </div>
        <div class="stat stat-2">
            <i class="stat-icon fas fa-laptop-house fa-lg"></i>
            <div class="stat-text-value">
                <div class="stat-text">
                    Unique Visits
                </div>
                <div class="stat-value">(350)</div>
            </div>
        </div>
        <div class="stat stat-3">
            <i class="stat-icon far fa-clock fa-lg"></i>
            <div class="stat-text-value">
                <div class="stat-text">
                    Avg. Visit Length
                </div>
                <div class="stat-value">(30s)</div>
            </div>
        </div>
    </section>
    <section id="charts">
        <div class="chart chart1">
            {{>downloadGauge downloads=downloads}}
        </div>

        <div class="chart chart2">
            <canvas id="myChart1" width="250" height="200"></canvas>
        </div>

        <div class="chart chart3">
            <canvas id="myChart2" width="250" height="200"></canvas>
        </div>

        <div class="chart chart4">
            <div class="chart-header purple-gradient subchart4-1">
                Date of Report
            </div>
            <div class="chart-box">
                <!-- <div class="subchart4-2">UK ECONOMIC FORECASTS</div>
              <div class="subchart4-3">125</div>
              <div class="hit-count"> Visits in Previous 30 Days</div> -->
                <div class="subchart4-3">MAY {{day}} 2020</div>
                <form action="/" method="Get">
                    <select name="month">
                        <option value="0">Jan</option>
                        <option value="1">Feb</option>
                        <option value="2">Mar</option>
                        <option value="3">Apr</option>
                        <option value="4">May</option>
                    </select>
                    <select name="day">
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="13">13</option>
                    </select>
                    <select name="year">
                        <option value="2020">2020</option>
                    </select>
                    <button class="submit purple-gradient">Submit</button>
                </form>
            </div>
        </div>
    </section>
    <section id="icons">
        <div class="icon icon1">
            <i class="fas fa-user fa-lg"></i>
            <i class="far fa-user fa-lg"></i>

            <div class="icon-text">18</div>
            <div class="icon-text">4</div>

            <div class="icon-subtext">Subscriber</div>
            <div class="icon-subtext">Non-Subscriber</div>
        </div>
        <div class="icon icon2">
            <i class="fas fa-mobile-alt fa-lg"></i>
            <i class="fas fa-desktop fa-lg"></i>

            <div class="icon-text">48%</div>
            <div class="icon-text">52%</div>

            <div class="icon-subtext">Mobile</div>
            <div class="icon-subtext">Desktop</div>
        </div>
        <div class="icon icon-4 icon3">
            <i class="fas fa-at fa-lg"></i>
            <i class="fab fa-chrome fa-lg"></i>
            <i class="fas fa-ad fa-lg"></i>
            <i class="fab fa-twitter-square fa-lg"></i>

            <div class="icon-text">10%</div>
            <div class="icon-text">82%</div>
            <div class="icon-text">2%</div>
            <div class="icon-text">6%</div>

            <div class="icon-subtext">Followed Link</div>
            <div class="icon-subtext">URL</div>
            <div class="icon-subtext">Advert</div>
            <div class="icon-subtext">Social Media</div>
        </div>
    </section>
    <section id="lists">
        <div class="left-list">
            <div class="list-title">Visits To Most Popular Pages</div>
            <ul class="list">
                <li><span class="rank">1 </span> UK Economic Forecasts<span class="rank-value">(350)</span></li>
                <li><span class="rank">2 </span> EU Economic Forecasts<span class="rank-value">(280)</span></li>
                <li><span class="rank">3 </span> Credit Market Forecasts<span class="rank-value">(268)</span></li>
                <li><span class="rank">4 </span> Housing Market Forecasts<span class="rank-value">(111)</span></li>
                <li><span class="rank">5 </span> Household Income Forecasts<span class="rank-value">(52)</span></li>
            </ul>
        </div>
        <div class="right-list">
            <div class="list-title">Visits by Company</div>
            <ul class="list">
                <li><span class="rank">1 </span> <img src="../../public/img/Aandewiel.png" alt="">Aandeweil
                    Investments<span class="rank-value">(420)</span></li>
                <li><span class="rank">2 </span> <img src="../../public/img/Arbor.png" alt="">Arbor Capital<span
                        class="rank-value">(356)</span></li>
                <li><span class="rank">3 </span> <img src="../../public/img/Melior.png" alt="">Melior Capital<span
                        class="rank-value">(220)</span></li>
                <li><span class="rank">4 </span> <img src="../../public/img/Temple.png" alt="">Temple Securities<span
                        class="rank-value">(111)</span></li>
                <li><span class="rank">5 </span> <img src="../../public/img/Melior.png" alt="">Melior Capital<span
                        class="rank-value">(16)</span></li>






            </ul>
        </div>
    </section>


</div>


