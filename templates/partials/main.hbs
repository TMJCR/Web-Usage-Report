                        ticks: {
                            fontColor: "#000",
                            fontSize: 11,
                            padding: 5
                        }
                    },
                ],
                yAxes:
                    [
                        {
                            gridLines: {
                                drawOnChartArea: false,
                                color: "#333",
                                tickMarkLength: 0,
                            },
                            ticks: {
                                fontColor: "#000",
                                fontSize: 11,
                                padding: 5,
                                maxTicksLimit: 6,
                            }
                        }

                    ]
            },
        },
    });
</script>
